            	android:layout_marginRight="15dp"
            	android:layout_centerVertical="true"
            	android:textSize="20sp"
            	android:typeface="sans"
            	android:layout_alignParentRight="true"
            	android:textColor="@color/white"
            	>  
          </Button> 
   		   		
	</RelativeLayout>

