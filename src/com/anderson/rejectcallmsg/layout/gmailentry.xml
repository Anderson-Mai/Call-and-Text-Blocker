<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_grey"
    android:orientation="vertical" >
    <!-- android:background="#007B76" -->
    
    
      <LinearLayout android:layout_width="fill_parent" 
        android:id="@+id/topHeaderLayout" 
        android:background="@drawable/titlebar" 
        android:gravity="center" 
        android:layout_height="44dip" 
        android:orientation="horizontal">
        
		 <Button
           	 	android:id="@+id/doneButton"
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:background="@drawable/btn_home"
            	android:gravity="center"
            	android:textSize="16sp"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="10dp"
            	android:layout_marginTop="5dp"
            	android:layout_marginBottom="5dp"
            	android:typeface="sans"
            	android:layout_weight="1.2"
            	android:textColor="@color/white">
   			</Button>
   		
		
		<TextView android:layout_gravity="center" 
		    style="@style/screenTitleText" 
		    android:id="@+id/header" 
		    android:gravity="center" 
		    android:textColor="@color/white" 
		    android:layout_height="fill_parent" 
		    android:layout_width="fill_parent" 
		    android:text="Reject Call and SMS"
		    android:layout_weight="0.7" 
		    android:typeface="sans">
		    
		</TextView>
		
		 <Button
           	 	android:id="@+id/button_add"
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:background="@drawable/add_icon_blue_1"
            	android:gravity="center"
            	android:textSize="16sp"
            	android:layout_marginLeft="15dp"
            	android:layout_marginRight="15dp"
            	android:layout_marginTop="3dp"
            	android:layout_marginBottom="3dp"
            	android:typeface="sans"
            	android:layout_weight="1.2"
            	android:textColor="@color/white">
   			</Button>
   		
	</LinearLayout>
  
       <LinearLayout
                android:id="@+id/WrappedView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
   		   	    android:layout_marginRight="10dip"
   		   	    android:layout_marginBottom="10dp"
   		   	    android:layout_below="@+id/topHeaderLayout"
                android:orientation="vertical"
                android:visibility="gone">
                
    
			<TextView 
			            android:id="@+id/GMailAddressHeader"
			       		android:layout_height="30dip"
						android:layout_width="fill_parent"
						android:background="#00000000"
						android:text="Ten Digit Phone Number:" 
					    android:textStyle="bold"
						android:textColor="@color/white"
						android:layout_gravity="center_horizontal"
						android:gravity="center"
						android:textSize="18sp">
		  </TextView>
				
		  <EditText 
				    	android:id="@+id/GmailAddressEntry"
						android:layout_height="42dip" 
						android:layout_width="fill_parent"
						android:textSize="18sp"
						android:textCursorDrawable="@color/blue"
						android:background="@drawable/rounded_edit_text_three"
						android:hint="Phone Number"
						android:layout_gravity="center_horizontal"
						android:gravity="center"
						android:inputType="text"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"
						android:textColor="@color/text_black"
						android:textColorHint="@color/text_hint_color_light_gray"
						>
					
		</EditText>
                   	

    	    <TextView
    	        android:id="@+id/NameEntryHeader"
    	        android:text="Confirm Phone Number"
    	        android:layout_width="wrap_content"
    	        android:layout_height="30dip"
    	        android:layout_gravity="center_horizontal"
    	        android:background="#00000000"
    	        android:layout_marginTop="10dip"
    	        android:gravity="center"
    	        android:textColor="@android:color/white"
    	        android:textSize="18sp"
    	        android:textStyle="bold"
    	        android:typeface="sans" />

    	    
    	    <EditText
    	    android:id="@+id/ConfirmAddressEntry"
    	    android:layout_width="fill_parent"
    	    android:layout_height="42dip"
    	    android:layout_gravity="center"
    	    android:background="@drawable/rounded_edit_text_three"
    	    android:gravity="center"
    	    android:layout_marginLeft="10dp"
    	    android:layout_marginRight="10dp"
    	    android:hint="Phone Number"
    	    android:inputType="text"
    	    android:textColor="@color/text_black"
    	    android:textColorHint="@color/text_hint_color_light_gray"
    	    android:textCursorDrawable="@color/blue"
    	    android:textSize="18sp"
    	    android:typeface="sans" >
    	</EditText>
    	
    	  <LinearLayout
                android:id="@+id/WrapViews"
                android:layout_height="60dp"
                android:layout_width="280dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
    	    
    	    	<Button android:layout_width="130dip" 
					android:layout_height="60dip" 
					android:id="@+id/submitButton" 
					android:text="Submit" 
					android:background="@drawable/btn_verify"
				    android:gravity="center"
	                android:paddingBottom="13dip"
	                android:paddingTop="5dip"
	                style="@style/ButtonText18"
	                android:layout_marginBottom="3dip">			
					
				</Button>
				
				<TextView 
					android:layout_width="20dp" 
					android:layout_height="60dip"
					android:background="#00000000">
  	         </TextView>
			
    			<Button
		            android:id="@+id/cancelButton"
		            android:layout_width="130dip"
		            android:layout_height="60dip"
		            android:layout_marginBottom="3dip"
		            android:background="@drawable/cancel"
		            android:gravity="center"
		            android:paddingBottom="13dip"
		            android:paddingTop="5dip"
		            style="@style/ButtonText18"
		            android:text="Done"
		            android:layout_marginRight="20dip">  
     			</Button>
     	</LinearLayout>
    
    </LinearLayout> 
    
             <LinearLayout
                android:id="@+id/WrappedViewTwo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                 android:layout_marginTop="10dip"
   		   	    android:layout_marginRight="10dip"
   		   	    android:layout_marginBottom="60dip"
   		   	    android:layout_below="@+id/WrappedView"
                android:orientation="vertical">
    	  
               <TextView 
					android:layout_width="match_parent" 
					android:layout_height="1dip"
					android:id="@+id/topline"
					android:background="#363636"
					android:layout_marginTop="20dip">
  	         </TextView>
      		    
		 		<ListView
   		   	    	android:id="@+id/gmailContactInbox"
   		   	    	android:layout_width="fill_parent"
   		   	    	android:layout_height="fill_parent"
   		   	    	 android:divider="#363636"
   		   	        android:dividerHeight="1dp"
   		   	    	android:background="#00000000"
   		   	    	android:textSize="15sp"
   		   	    	android:scrollbarStyle="insideOverlay">
   		   		</ListView>
   		   		
   		   		 <TextView 
					android:layout_width="match_parent" 
					android:layout_height="1dip"
					android:id="@+id/bottomline"
					android:background="#363636">
  	         </TextView>
		 		
		 		
   		   		
   		  </LinearLayout> 
   		    
   		   	
	</RelativeLayout>  
	
	