<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#003F5D"
    android:orientation="vertical" >


	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/topHeaderLayout"
		android:background="@drawable/green320"
		android:layout_height="50dp"
		android:layout_marginTop="2dp"
		android:orientation="horizontal">

		<Button android:id="@+id/button_back"
			android:layout_width="30dp"
			android:layout_height="28dp"
			android:layout_marginLeft="25dp"
			android:layout_alignParentLeft="true"
			android:background="@drawable/back_button"
			android:layout_centerVertical="true">
		</Button>


		<TextView
			android:id="@+id/header"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:text="USA Area Code List"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:typeface="sans"
			android:gravity="center"
			android:layout_centerHorizontal="true">
		</TextView>


	</RelativeLayout>

             <LinearLayout
                android:id="@+id/WrappedView_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
   		   	    android:layout_below="@+id/topHeaderLayout"
                android:orientation="vertical">

				 <ListView
					 android:id="@+id/symbolsearch"
					 android:layout_width="fill_parent"
					 android:layout_height="fill_parent"
					 android:divider="#006189"
					 android:layout_marginLeft="20dp"
					 android:layout_marginRight="20dp"
					 android:dividerHeight="1dp"
					 android:background="#00000000"
					 android:layout_below="@+id/topHeaderLayout">
				 </ListView>

   		   		
   		   		<TextView 
					android:layout_width="match_parent" 
					android:layout_height="1dip"
					android:id="@+id/bottomline"
					android:visibility="gone"
					android:background="#006189">
  	         </TextView>
   		  </LinearLayout>

	</RelativeLayout>  
	
	